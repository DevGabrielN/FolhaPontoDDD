@model FolhaPontoDDD.Web.Models.FolhaPonto
@{
    ViewData["Title"] = "Relatorio";
}

<h1>@ViewData["Title"]</h1>

<p>Gerar relatório.</p>

<form asp-action="Index" method="post">
    <div class="form-group align-items-center">
        <label asp-for="DiretorioOrigem"></label>
        <div class="input-group">
            <input asp-for="DiretorioOrigem" class="form-control" />
            <div class="input-group-append">
                <span class="input-group-text" data-toggle="tooltip" data-placement="top" title="Insira o local de origem do(s) arquivo(s).">
                    <i class="fas fa-question-circle"></i>
                </span>
            </div>
        </div>
        <span asp-validation-for="DiretorioOrigem" class="text-danger"></span>
    </div>

    <div class="form-group align-items-center">
        <label asp-for="DiretorioDestino"></label>
        <div class="input-group">
            <input asp-for="DiretorioDestino" class="form-control" />
            <div class="input-group-append">
                <span class="input-group-text" data-toggle="tooltip" data-placement="top" title="Insira o local de destino do relatório.">
                    <i class="fas fa-question-circle"></i>
                </span>
            </div>
        </div>
        <span asp-validation-for="DiretorioDestino" class="text-danger"></span>
    </div>

    <div class="form-group align-items-center">
        <div class="form-check d-inline">
            <input asp-for="ContainHeaders" class="form-check-input" checked />
            <label class="form-check-label" asp-for="ContainHeaders">Contém Headers</label>
            <span class="input-group-text d-inline" data-toggle="tooltip" data-placement="top" title="Marque esta caixa se o arquivo contém cabeçalhos.">
                <i class="fas fa-question-circle"></i>
            </span>
        </div>
        <span asp-validation-for="ContainHeaders" class="text-danger"></span>
    </div>

    <div class="form-group align-items-center">
        <label asp-for="Delimitador"></label>
        <div class="input-group">
            <select asp-for="Delimitador" class="form-control">
                <option value=";">Ponto e Vírgula (";")</option>
                <option value=",">Vírgula (",")</option>
                <option value="|">Pipe ("|")</option>
            </select>
            <div class="input-group-append">
                <span class="input-group-text" data-toggle="tooltip" data-placement="top" title="Selecione qual é o delimitador do arquivo.">
                    <i class="fas fa-question-circle"></i>
                </span>
            </div>
        </div>
        <span asp-validation-for="Delimitador" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Gerar Relatório</button>
</form>

@section Scripts
    {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_MessageSucessPartial");
    }
}